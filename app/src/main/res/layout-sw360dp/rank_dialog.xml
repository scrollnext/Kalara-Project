<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/Coloracrtionprimary"

        android:layout_height="wrap_content"
       >
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Rate Us"/>
        <ImageView
            android:layout_width="wrap_content"
android:src="@drawable/close"
     android:layout_alignParentRight="true"
android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:layout_height="wrap_content"
            android:id="@+id/cllose" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/starbg"

    >

     <RatingBar 
         android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
         android:layout_width="wrap_content" android:layout_height="wrap_content"
         android:clickable="true"
android:layout_centerHorizontal="true"
         android:layout_marginLeft="10dp"
         android:layout_centerVertical="true"
         android:id="@+id/dialog_ratingbar" android:layout_gravity="center"
          style="@style/StarRatingBar"
         android:numStars="5" android:stepSize="0.5" android:rating="0"

         android:isIndicator="false"/>
    </RelativeLayout>

    <EditText android:layout_width="300dp"

        android:layout_marginTop="20dp"
        android:hint="Comments"
        android:textSize="15dp"
        android:singleLine="false"
        android:inputType="text"
        android:id="@+id/comments"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:gravity="start"
        android:paddingTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"/>



     <Button android:id="@+id/rank_dialog_button" 
         android:background="@drawable/btn1"
         android:layout_height="wrap_content" 
         android:text="Ok"  android:focusable="false"
         android:layout_margin="5dip" android:textColor="#FFFFFF"
         android:layout_gravity="center_horizontal"
         android:textSize="20dip" android:layout_width="match_parent" />
    </LinearLayout>

</LinearLayout>